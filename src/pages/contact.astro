---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Contact Us - Underground MTG Art | Goldsabertooth";
const description =
  "Get in touch with our underground art collective. Custom commissions, wholesale inquiries, or just want to chat about psychedelic MTG art.";
---

<BaseLayout title={title} description={description}>
  <div class="px-4 py-16 min-h-screen">
    <div class="mx-auto max-w-4xl">
      <!-- Header -->
      <div class="mb-12 text-center">
        <h1 class="mb-6 text-electric-blue graffiti">GET IN TOUCH</h1>
        <p
          class="mx-auto max-w-2xl font-body text-paper text-lg leading-relaxed"
        >
          Ready to join the underground? Have questions about our psychedelic
          MTG art? Need a custom piece for your chaos? We're here to help make
          magic happen.
        </p>
      </div>

      <div class="gap-12 grid grid-cols-1 lg:grid-cols-2">
        <!-- Contact Form -->
        <div class="bg-paper p-8 comic-border">
          <h2
            class="mb-6 font-display text-ink text-2xl rotate-1"
          >
            SEND US A MESSAGE
          </h2>

          <form
            name="contact"
            method="POST"
            data-netlify="true"
            data-netlify-honeypot="bot-field"
            class="space-y-6"
          >
            <!-- Netlify form fields -->
            <input type="hidden" name="form-name" value="contact" />

            <!-- Honeypot field -->
            <div class="hidden">
              <label>
                Don't fill this out if you're human:
                <input name="bot-field" />
              </label>
            </div>

            <!-- Name -->
            <div>
              <label
                for="name"
                class="block mb-2 font-display text-ink text-lg"
              >
                NAME *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="bg-white px-4 py-3 comic-border focus:outline-none focus:ring-2 focus:ring-electric-blue w-full font-body text-ink placeholder:text-gray-500"
                placeholder="Your wizard name..."
              />
            </div>

            <!-- Email -->
            <div>
              <label
                for="email"
                class="block mb-2 font-display text-ink text-lg"
              >
                EMAIL *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="bg-white px-4 py-3 comic-border focus:outline-none focus:ring-2 focus:ring-electric-blue w-full font-body text-ink placeholder:text-gray-500"
                placeholder="your@email.com"
              />
            </div>

            <!-- Subject -->
            <div>
              <label
                for="subject"
                class="block mb-2 font-display text-ink text-lg"
              >
                SUBJECT
              </label>
              <select
                id="subject"
                name="subject"
                class="bg-white px-4 py-3 comic-border focus:outline-none focus:ring-2 focus:ring-electric-blue w-full font-body text-ink"
              >
                <option value="">Select a topic...</option>
                <option value="custom-commission">Custom Commission</option>
                <option value="wholesale-inquiry">Wholesale Inquiry</option>
                <option value="product-question">Product Question</option>
                <option value="shipping-issue">Shipping Issue</option>
                <option value="collaboration">Collaboration</option>
                <option value="other">Other</option>
              </select>
            </div>

            <!-- Message -->
            <div>
              <label
                for="message"
                class="block mb-2 font-display text-ink text-lg"
              >
                MESSAGE *
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="bg-white px-4 py-3 comic-border focus:outline-none focus:ring-2 focus:ring-electric-blue w-full font-body text-ink placeholder:text-gray-500 resize-y"
                placeholder="Tell us about your vision for chaos..."></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="bg-electric-blue hover:bg-electric-blue-dark py-4 comic-border focus:outline-none focus:ring-2 focus:ring-electric-blue focus:ring-offset-2 focus:ring-offset-paper w-full font-display text-ink text-xl transition-all duration-200 btn-psychedelic"
            >
              SEND ‚Üí
            </button>
          </form>
        </div>

        <!-- Contact Info & FAQ -->
        <div class="space-y-8">
          <!-- Contact Info -->
          <div class="bg-ink p-8 comic-border">
            <h2
              class="mb-6 outline-text font-display text-electric-blue text-2xl -rotate-1"
            >
              DIRECT LINES
            </h2>

            <div class="space-y-4 font-body text-paper">
              <div class="flex items-start space-x-3">
                <span class="text-neon-orange text-xl">üìß</span>
                <div>
                  <p class="font-medium">Email</p>
                  <a
                    href="mailto:hello@goldsabertooth.com"
                    class="text-electric-blue hover:underline"
                  >
                    info@goldsabertooth.com
                  </a>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <span class="text-neon-lime text-xl">üí¨</span>
                <div>
                  <p class="font-medium">Discord Community</p>
                  <a
                    href="#"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-electric-blue hover:underline"
                  >
                    Join the cubs
                  </a>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <span class="text-psychedelic-purple text-xl">üõçÔ∏è</span>
                <div>
                  <p class="font-medium">Etsy Store</p>
                  <a
                    href="https://etsy.com/shop/goldsabertooth"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-electric-blue hover:underline"
                  >
                    etsy.com/shop/goldsabertooth
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- FAQ -->
          <div class="bg-paper p-8 comic-border">
            <h2
              class="mb-6 font-display text-ink text-2xl rotate-1"
            >
              QUICK ANSWERS
            </h2>

            <div class="space-y-4 font-body text-gray-700">
              <div>
                <h3 class="mb-1 font-medium text-ink">Custom Commissions?</h3>
                <p class="text-sm">
                  Yes! We love creating unique pieces. Email us your vision and
                  we'll make magic happen.
                </p>
              </div>

              <div>
                <h3 class="mb-1 font-medium text-ink">Shipping Time?</h3>
                <p class="text-sm">
                  Most orders ship within 2-3 business days. Custom pieces take
                  1-2 weeks.
                </p>
              </div>

              <div>
                <h3 class="mb-1 font-medium text-ink">Wholesale Pricing?</h3>
                <p class="text-sm">
                  We offer wholesale rates for orders of 10+ pieces. Contact us
                  for details.
                </p>
              </div>

              <div>
                <h3 class="mb-1 font-medium text-ink">Returns?</h3>
                <p class="text-sm">
                  We want you to love your chaos! Contact us within 14 days if
                  something's not right.
                </p>
              </div>
            </div>
          </div>

          <!-- Social Proof -->
          <div class="bg-neon-lime p-6 comic-border text-center">
            <h3 class="mb-3 outline-text font-display text-ink text-xl">
              JOIN THE UNDERGROUND
            </h3>
            <p class="mb-4 font-body text-ink text-sm">
              Over 1,000 planeswalkers are already part of our chaotic
              community.
            </p>
            <div class="flex justify-center space-x-4">
              <a
                href="#"
                class="bg-ink hover:bg-gray-800 p-2 comic-border-sm text-neon-lime transition-colors"
                aria-label="Instagram"
              >
                üì∏
              </a>
              <a
                href="#"
                class="bg-ink hover:bg-gray-800 p-2 comic-border-sm text-neon-lime transition-colors"
                aria-label="Twitter"
              >
                üê¶
              </a>
              <a
                href="#"
                class="bg-ink hover:bg-gray-800 p-2 comic-border-sm text-neon-lime transition-colors"
                aria-label="Discord"
              >
                üí¨
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Form submission feedback
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.querySelector('form[name="contact"]');
    if (form) {
      form.addEventListener("submit", (e) => {
        const submitButton = form.querySelector('button[type="submit"]');
        if (submitButton) {
          submitButton.textContent = "SENDING CHAOS...";
          submitButton.disabled = true;
        }
      });
    }

    // Check for success/error messages in URL
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get("success") === "true") {
      // Show success message
      const successDiv = document.createElement("div");
      successDiv.className =
        "fixed top-4 right-4 z-50 comic-border bg-neon-lime p-4 text-ink max-w-md";
      successDiv.innerHTML = `
        <h4 class="mb-2 font-display text-lg">MESSAGE SENT!</h4>
        <p class="font-body text-sm">Thanks for reaching out! We'll get back to you within 24 hours.</p>
        <button onclick="this.parentElement.remove()" class="top-2 right-2 absolute flex justify-center items-center hover:bg-black hover:bg-opacity-10 rounded w-6 h-6 text-ink">√ó</button>
      `;
      document.body.appendChild(successDiv);

      // Auto-remove after 5 seconds
      setTimeout(() => successDiv.remove(), 5000);
    }
  });
</script>
