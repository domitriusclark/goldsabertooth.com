---

<Layout>
  <section
    class="flex justify-center items-center bg-secondary -mx-8 -mt-32 h-screen text-center"
  >
    <div class="flex flex-col items-center px-8 max-w-3xl">
      <img
        src="https://res.cloudinary.com/treasurechest/image/upload/v1747186859/timt_o37kyp.webp"
        alt="Tim Taranto portrait"
        class="shadow-lg mx-auto mb-6 border-4 border-white rounded-full w-32 md:w-48 h-32 md:h-48 object-cover"
      />
      <p class="opacity-70 text-base tracking-widest">CEDH Gamer & Artist</p>
    </div>
  </section>

  <section class="py-16">
    <div class="mx-auto max-w-[1400px]">
      <!-- Featured content will go here -->
    </div>
  </section>
</Layout>
