---
interface Props {
  title?: string;
}

const { title = "Goldsabertooth" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Helvetica+Neue:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="flex flex-col bg-black m-0 p-0 w-full h-screen overflow-hidden font-['Helvetica_Neue',_Helvetica,_Arial,_sans-serif] text-white tracking-wider"
  >
    <header class="z-50 flex flex-col items-center bg-black p-8 md:p-12 w-full">
      <div
        class="mb-4 font-serif font-normal text-4xl md:text-5xl text-center tracking-wide"
      >
        Goldsabertooth
      </div>
      <nav class="flex flex-col items-center w-full">
        <ul
          class="flex flex-row gap-10 md:gap-16 mb-4 font-normal text-lg md:text-xl text-center tracking-wide"
        >
          <li>
            <a
              href="/"
              class="hover:text-orange-600 transition-colors duration-200"
              >Home</a
            >
          </li>
          <li>
            <a
              href="/about"
              class="hover:text-orange-600 transition-colors duration-200"
              >About</a
            >
          </li>
          <li>
            <a
              href="/contact"
              class="hover:text-orange-600 transition-colors duration-200"
              >Contact</a
            >
          </li>
          <li>
            <a
              href="/portfolio"
              class="hover:text-orange-600 transition-colors duration-200"
              >Portfolio</a
            >
          </li>
          <li>
            <a
              href="/shop"
              class="hover:text-orange-600 transition-colors duration-200"
              >Shop</a
            >
          </li>
        </ul>
        <div class="flex flex-row justify-center gap-6">
          <a
            href="https://www.instagram.com/goldsabertooth"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
            class="hover:text-orange-600 transition-colors duration-200"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="w-6 h-6"
            >
              <rect
                width="20"
                height="20"
                x="2"
                y="2"
                rx="6"
                stroke="currentColor"
                stroke-width="2"></rect>
              <circle
                cx="12"
                cy="12"
                r="5"
                stroke="currentColor"
                stroke-width="2"></circle>
              <circle cx="17" cy="7" r="1.5" fill="currentColor"></circle>
            </svg>
          </a>
          <a
            href="https://www.x.com/goldsabertooth"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="X (Twitter)"
            class="hover:text-orange-600 transition-colors duration-200"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="w-6 h-6"
            >
              <path
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 4l16 16M20 4L4 20"></path>
            </svg>
          </a>
        </div>
      </nav>
    </header>
    <main class="flex-1 overflow-y-auto">
      <div class="box-border mx-auto px-4 md:px-8 py-8 w-full max-w-[1400px]">
        <slot />
      </div>
    </main>
    <footer class="bg-black p-4 md:p-8 border-white/10 border-t w-full">
      <div
        class="flex flex-col justify-center items-center opacity-70 mx-auto w-full max-w-[1400px] text-sm text-center"
      >
        <p>Â© 2024 by Tim Taranto</p>
      </div>
    </footer>
  </body>
</html>

<style>
  :root {
    --primary-color: #ffffff;
    --secondary-color: #000000;
    --accent-color: #666666;
  }
</style>
